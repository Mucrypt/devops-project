apiVersion: v1
kind: Secret
metadata:
  name: backend-secret
  namespace: nexusai
type: Opaque
data:
  # Base64 encoded values - REPLACE ALL OF THESE WITH YOUR OWN!
  # To encode: echo -n 'your-value' | base64
  # NEVER commit the actual mongodb-secret.yaml file!
  
  # JWT Secret - Generate a strong random string
  # Example: openssl rand -base64 32
  JWT_SECRET: REPLACE_WITH_BASE64_JWT_SECRET
  
  # JWT Refresh Secret - Generate another strong random string
  JWT_REFRESH_SECRET: REPLACE_WITH_BASE64_JWT_REFRESH_SECRET
  
  # Email Configuration
  # Example: echo -n 'your-email@gmail.com' | base64
  EMAIL_USER: REPLACE_WITH_BASE64_EMAIL_USER
  
  # Email Password - Use app-specific password for Gmail
  # Example: echo -n 'your-app-password' | base64
  EMAIL_PASSWORD: REPLACE_WITH_BASE64_EMAIL_PASSWORD
  
  # Stripe Keys (Optional - leave as placeholder if not using)
  # Get from: https://dashboard.stripe.com/apikeys
  STRIPE_SECRET_KEY: REPLACE_WITH_BASE64_STRIPE_SECRET_KEY
  STRIPE_WEBHOOK_SECRET: REPLACE_WITH_BASE64_STRIPE_WEBHOOK_SECRET
  
  # OpenAI API Key (Optional - leave as placeholder if not using)
  # Get from: https://platform.openai.com/api-keys
  OPENAI_API_KEY: REPLACE_WITH_BASE64_OPENAI_API_KEY
